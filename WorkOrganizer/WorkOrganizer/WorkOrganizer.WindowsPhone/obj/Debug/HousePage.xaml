<Page
    x:Class="WorkOrganizer.HousePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkOrganizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Name="LayoutRoot"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <!--Total = 10-->
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="WorkOrganizer"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{ ThemeResource HeaderTextBlockStyle }"
                   FontWeight="Bold">
            Work Organizer
        </TextBlock>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    Grid.Row="1">
            <TextBlock x:Name="TextName"
                       HorizontalAlignment="Center"
                       Style="{ StaticResource MyTextBoxStyle }">Name:</TextBlock>
            <TextBox x:Name="TextBoxName"
                     VerticalAlignment="Center"
                     TextWrapping="Wrap"
                     Width="400"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Row="2">
            <TextBlock Name="TextHouse"
                       Style="{ StaticResource MyTextBoxStyle }">Owner</TextBlock>
            <ComboBox Name="ComboOwners"
                      Grid.Row="2"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      DisplayMemberPath="Name"
                      SelectedValuePath="IdOwner"
                      PlaceholderText="Pick an Owner"></ComboBox>
        </StackPanel>
        <TextBlock Name="TextError"
                   Style="{ StaticResource MyTextBoxStyle }"
                   TextWrapping="WrapWholeWords"
                   HorizontalAlignment="Center"
                   Foreground="Red"
                   FontWeight="Bold"
                   Visibility="Collapsed"
                   Grid.Row="3"></TextBlock>
        <Button x:ConnectionId='1' Name="ButtonGoBack"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                                          
                Grid.Row="4">
            Back
        </Button>
        <Button x:ConnectionId='2' Name="ButtonCreateOrEditHouse"
                Grid.Row="4"
                HorizontalAlignment="Right"
                Height="70"
                Width="200"
                FontSize="26.667"
                HorizontalContentAlignment="Center"
                BorderThickness="5"
                BorderBrush="White"
                Background="Black"
                                                     >
            Create House
        </Button>
    </Grid>
</Page>

